public static void bintodec(int n){
    int pow = 0;
    int binnum = 0;
    int mymum = n;
    while(n>0){
      int rem = n % 2;
      binnum = binnum + rem * (int)Math.pow(10, pow);
      pow++;
      n = n / 2;

    }
    System.out.println("binary of " + mymum + "=" + binnum);
  } 
  public static void main(String args[]){
    bintodec(7);/you can write any number insted of 7

  }
  
  
  #Output :- 
  0111
